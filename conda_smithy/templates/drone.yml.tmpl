{% if configs[0] -%}
{%- for config, platform, upload in configs | sort -%}
---
kind: pipeline
name: {{ config }}

platform:
  os: linux
  arch: arm64

steps:
- name: Install and build
  image: {{ docker.image }}
  environment:
    CONFIG: {{ config }}
    UPLOAD_PACKAGES: {{ upload }}
    PLATFORM: {{ platform }}
    DOCKER_IMAGE: {{ docker.image }}
    #BINSTAR_TOKEN: ""
  commands:
  {%- if 'linux' in platform %}
    - ./.drone/build_and_run.sh
    - echo "Done building"
  {%- endif %}
{% endfor %}
{%- endif %}

