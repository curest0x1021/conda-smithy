  version: 2
  build_and_test:
    jobs:
{%- block env_deps -%}
{%- if not configs %}
      - build:
          filters:
            branches:
              ignore:
                - /.*/
{%- else %}
{%- for data in configs %}
      - build_{{ data.config_name }}
{%- endfor -%}
{%- endif -%}
{%- endblock %}
